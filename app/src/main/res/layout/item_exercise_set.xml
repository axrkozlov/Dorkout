<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/exercise_set_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/eset"
        android:layout_gravity="left"
        />


    <TextView
        android:id="@+id/exercise_set_norm_reps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/norm_reps"
        android:textAlignment="center"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/exercise_set_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/weight"
        android:textAlignment="center"
        android:layout_gravity="left"
        />


    <TextView
        android:id="@+id/exercise_set_norm_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/norm_time"
        android:textAlignment="center"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/exercise_set_rest_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/rest_time"
        android:textAlignment="center"
        android:layout_gravity="left"

        />

    <ImageView
        android:id="@+id/exercise_set_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_done_24dp" />
</LinearLayout>