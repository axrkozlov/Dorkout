<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/workout_item">

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <TextView
            android:id="@+id/exercise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/exercise_number"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_big_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:text="@string/exercise_title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_big_text"
            app:layout_constraintStart_toEndOf="@+id/exercise_number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/exercise_desc"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/small_label_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_title" />

        <ImageButton
            android:id="@+id/exercise_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_expand_24dp" />

        <ImageView
            android:id="@+id/exercise_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_collapse"
            app:layout_constraintEnd_toStartOf="@+id/exercise_collapse"
            app:layout_constraintTop_toTopOf="@+id/exercise_collapse"
            app:srcCompat="@drawable/ic_done_24dp" />

        <TextView
            android:id="@+id/exercise_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintRight_toRightOf="@id/exercise_desc"
            app:layout_constraintStart_toStartOf="@+id/exercise_number"
            app:layout_constraintTop_toBottomOf="@id/exercise_desc" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_sets"
            app:srcCompat="@drawable/gray_borders" />


