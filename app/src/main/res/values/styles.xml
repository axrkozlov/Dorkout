<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:textColorPrimary">#FFFF00</item>-->
        <!--<item name="android:textColorPrimaryInverse">#FF00FF</item>-->
        <!--<item name="android:textColorSecondary">#00FFFF</item>-->

        <!--<item name="actionBarTheme">@style/ActionBar</item>-->
        <!--<item name="android:windowBackground">@color/status_workout_run</item>-->
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        ><item name="android:textColorPrimary">@color/colorToolbarElements</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/status_workout_run</item>
        <item name="android:textColorSecondary">#00FFFF</item>
    </style>
    
    <style name="ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/status_workout_run</item>
    </style>

    <style name="card_info_label">
        <item name="android:textSize">@dimen/info_label</item>
        <item name="android:textColor">@color/info_label</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="card_info_text" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="result_label">
        <item name="android:textSize">@dimen/result_label</item>
        <item name="android:textColor">@color/result_label</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="result_text">
        <item name="android:textSize">@dimen/result_text</item>
        <item name="android:textColor">@color/result_digit</item>
    </style>

    <style name="result_text_ms">
        <item name="android:textSize">@dimen/result_text_ms</item>
        <item name="android:textColor">@color/result_digit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>


    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
